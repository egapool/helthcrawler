<div class="edit-layer-inner">
  <div class="edit-layer-content">
    <div class="form-header">Input your site's information</div>
    <form id="new-site">
      <table class="table">
        <tr>
          <th>Site Name</th>
          <td><input class="form-control" value="{{title}}" type="text" name="title" placeholder="input your site's name.."></td>
        </tr>
        <tr>
          <th>Site Url</th>
          <td><input class="form-control" value="{{domain}}" type="text" name="domain" placeholder="input your site's url.."></td>
        </tr>
        <tr>
          <th>basic user</th>
          <td><input class="form-control" value="{{user}}" type="text" name="user" placeholder="input your basic user.."></td>
        </tr>
        <tr>
          <th>basic pass</th>
          <td><input class="form-control" value="{{pass}}" type="text" name="pass" placeholder="input your basic password.."></td>
        </tr>
      </table>
      {{#if title}}
      <p class="edit"><span class="btn btn-orange">ITO!</p>
      {{else}}
      <p class="submit"><span class="btn btn-orange">ITO!</p>
      {{/if}}
      <p class="cancel"><span class="label label-yellow">orz</span></p>
    </form>
  </div>
</div>